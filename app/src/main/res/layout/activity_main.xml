<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/main_background">


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStart"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorWhite"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonOff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorGreen"
        android:onClick="onClickStart"
        android:text="Start" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonClear"
        android:layout_alignBottom="@+id/buttonClear"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonClear"
        android:onClick="onClickSend"
        android:text="Send" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="700dp"
        android:layout_height="100dp"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/buttonStart"
        android:layout_toEndOf="@+id/buttonStart"
        android:layout_toRightOf="@+id/buttonStart"
        android:backgroundTint="@color/colorAccent"
        android:onClick="onClickStop"
        android:text="Stop" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/buttonStop"
        android:layout_alignBottom="@+id/buttonStop"
        android:layout_toEndOf="@+id/buttonStop"
        android:layout_toRightOf="@+id/buttonStop"
        android:onClick="onClickClear"
        android:text="Clear" />

    <Button
        android:id="@+id/buttonOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonFast"
        android:layout_alignBottom="@+id/buttonFast"
        android:layout_toEndOf="@+id/buttonOn"
        android:layout_toRightOf="@+id/buttonOn"
        android:backgroundTint="@color/colorTurquoise"
        android:onClick="onClickOff"
        android:text="LED Off"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonFast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_toEndOf="@+id/buttonOff"
        android:layout_toRightOf="@+id/buttonOff"
        android:backgroundTint="@color/colorTurquoise"
        android:onClick="onClickFast"
        android:text="Fast"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonSlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonFast"
        android:layout_alignBottom="@+id/buttonFast"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/buttonClear"
        android:layout_toRightOf="@+id/buttonClear"
        android:backgroundTint="@color/colorTurquoise"
        android:onClick="onClickSlow"
        android:text="Slow"
        android:textColor="@color/colorWhite" />

    <Button
        android:id="@+id/buttonOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonOff"
        android:layout_alignBottom="@+id/buttonOff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/colorTurquoise"
        android:onClick="onClickOn"
        android:text="LED On"
        android:textColor="@color/colorWhite" />
</RelativeLayout>